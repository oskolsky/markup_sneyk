%html.no-js{lang: "ru-RU"}
  %head
    %title Layouts / Sneyk
    = Haml::Engine.new(File.read('views/layouts/_head.haml')).render
  
  %body#page.page
    = Haml::Engine.new(File.read('views/common/_alerts.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_header.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_nav.haml')).render
    
    %main#main.main{role: "main"}
      .ctn
        .p-t_5

          .grid
            .grid-i.__grid-6>
              .m-b_4
                %h1 Заголовок h1
              .m-b_4
                %h2 Заголовок h2
              .m-b_4
                %h3 Заголовок h3
            .grid-i.__grid-6>
              .m-b_4
                %h1.title Заголовок h1
              .m-b_4
                %h2.title Заголовок h2
              .m-b_4
                %h3.title Заголовок h3

          %section.section.m-b_4{role: "region", "aria-label" => "Layouts"}
            .section_inner
              .grid
                - 1.upto(6) do |i|
                  .grid-i.__grid-1.c-bg.__red>
                    %p.tx.__center 1
                  .grid-i.__grid-1.c-bg.__green>
                    %p.tx.__center 1
                  
          %section.section.m-b_4{role: "region", "aria-label" => "Layouts"}
            .section_inner.__padding
              .grid
                - 1.upto(6) do
                  .grid-i.__grid-1.c-bg.__red>
                    %p.tx.__center 1
                  .grid-i.__grid-1.c-bg.__green>
                    %p.tx.__center 1

          %section.section{role: "region", "aria-label" => "Layouts"}
            .section_inner.__padding
              .grid.__no-gutter
                - 1.upto(6) do
                  .grid-i.__grid-1.c-bg.__red>
                    %p.tx.__center 1
                  .grid-i.__grid-1.c-bg.__green>
                    %p.tx.__center 1

      = Haml::Engine.new(File.read('views/layouts/_recently.haml')).render
      = Haml::Engine.new(File.read('views/layouts/_brand.haml')).render
    = Haml::Engine.new(File.read('views/layouts/_footer.haml')).render